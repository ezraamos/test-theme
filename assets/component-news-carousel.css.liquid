.block.campaign .title {
  color: red;
}

.block.new-product .title {
  color: blue;
}

.block.news .title {
  color: green;
}
.block {
  border: 2px solid #ccc;
  border-radius: 5px;
  padding: 20px;
  width: 300px; /* Specific width */
  margin: 10px;
}

.title {
  margin-top: 0;
}

.news-carousel {
  position: relative;
  margin: 50px auto;
  width: 80%;
}

.slide-arrow {
  position: absolute;
  top: 50%;
  margin-top: -15px;
  cursor: pointer;
  border: solid black;
  border-width: 0 3px 3px 0;
  display: inline-block;
  padding: 3px;
}
.prev-arrow {
  transform: rotate(135deg);
  left: -40px;
}
.next-arrow {
  transform: rotate(-45deg);
  right: -40px;
}
